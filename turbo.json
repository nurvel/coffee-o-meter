{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": [".next/**"]
    },
    "dev": {
      "dependsOn": [
        "^generate",
        "^db-run:local",
        "^db:generate",
        "^db:migrate:local"
      ],
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": true
    },
    "db-run:local": {
      "cache": true
    },
    "db:migrate:local": {
      "cache": false,
      "env": ["POSTGRES_URI"]
    },
    "db:generate": {
      "cache": false,
      "outputs": ["prisma db generated, nice"]
    },
    "lint": {}
  }
}
