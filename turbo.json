{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "dependsOn": [
        "^generate",
        "^db:docker-run:local",
        "^db:generate",
        "^db:migrate:local"
      ],
      "persistent": true
    },
    "generate": {},
    "db:docker-run:local": {
      "dependsOn": ["^db:docker-init:local"]
    },
    "db:docker-init:local": {},
    "db:migrate:local": {},
    "db:generate": {
      "dependsOn": ["^db:generate"]
    },
    "lint": {}
  }
}
