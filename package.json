    "migrate-db": "npx prisma migrate dev",
    "prisma-studio": "npx prisma studio"
  },
  "dependencies": {
    "@mantine/core": "^3.6.7",
    "@mantine/hooks": "^3.6.7",
    "@mantine/next": "^3.6.7",
    "@prisma/client": "^3.9.2",
    "next": "12.0.10",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.15",
    "@types/react": "17.0.39",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.10",
    "openapi-typescript-codegen": "^0.18.2",
    "prisma": "^3.9.2",
    "swagger-ts-generator": "^2.0.6",
    "typescript": "4.5.5"
  }
